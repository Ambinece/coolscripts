local UIS = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local isSpamming = false
local spamCoroutine

local function spamRob()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:FindFirstChild("Humanoid")

    if humanoid then
        humanoid.WalkSpeed = 36
    end

    while isSpamming do
        local robRemote = ReplicatedStorage:WaitForChild("rob")
        if robRemote then
            robRemote:FireServer()
        end
        wait(0.1) -- Adjust the delay as needed
    end

    if humanoid then
        humanoid.WalkSpeed = 20 -- Resetting the speed to the default value
    end
end

local function toggleSpam()
    isSpamming = not isSpamming
    if isSpamming then
        spamCoroutine = coroutine.create(spamRob)
        coroutine.resume(spamCoroutine)
    else
        isSpamming = false
    end
end

-- Bind the "R" key to toggle the spam function
UIS.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.R then
        toggleSpam()
    end
end)

